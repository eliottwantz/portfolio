---
import Layout from "../layouts/Layout.astro";

const projects = [
    {
        title: "Project Alpha",
        description:
            "A web application reimagining how teams collaborate on creative work. Real-time editing, presence awareness, and an interface that stays out of the way.",
        tags: ["TypeScript", "React", "WebSockets"],
        link: "#",
    },
    {
        title: "Project Beta",
        description:
            "An open-source component library built for accessibility and performance. Designed so developers can ship beautiful interfaces without compromise.",
        tags: ["Open Source", "Design Systems", "A11y"],
        link: "#",
    },
    {
        title: "Project Gamma",
        description:
            "A CLI tool that streamlines development workflows — automating the repetitive so engineers can focus on the meaningful.",
        tags: ["Rust", "CLI", "Developer Tools"],
        link: "#",
    },
    {
        title: "Project Delta",
        description:
            "A data visualization platform transforming complex datasets into intuitive, interactive narratives that anyone can understand.",
        tags: ["D3.js", "SVG", "Data Viz"],
        link: "#",
    },
];
---

<Layout
    title="Projects — Eliott"
    description="Selected projects and open-source work."
>
    <!-- Header -->
    <section class="pt-36 pb-12 px-6">
        <div class="max-w-2xl mx-auto">
            <h1
                class="font-display text-5xl sm:text-6xl md:text-7xl font-light text-cream/90 animate-fade-up"
            >
                Projects
            </h1>
            <p
                class="mt-5 font-display italic text-xl text-muted animate-fade-up"
                style="animation-delay: 0.12s;"
            >
                Things I&rsquo;ve brought to life
            </p>
        </div>
    </section>

    <!-- Grid -->
    <section class="max-w-3xl mx-auto px-6 pb-32">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            {
                projects.map((project, i) => (
                    <a
                        href={project.link}
                        class="group relative block p-8 border border-rule rounded-sm bg-surface/40
                   hover:border-amber/20 hover:bg-elevated/50
                   transition-all duration-500
                   hover:shadow-[0_0_50px_-12px_rgba(200,150,60,0.07)]"
                        data-reveal
                        data-delay={String(i + 1)}
                    >
                        <h2 class="font-display text-2xl text-cream/90 group-hover:text-amber transition-colors duration-300 font-light">
                            {project.title}
                        </h2>
                        <p class="mt-4 text-[16px] text-muted leading-[1.85]">
                            {project.description}
                        </p>
                        <div class="mt-6 flex flex-wrap gap-2">
                            {project.tags.map((tag) => (
                                <span class="text-xs tracking-[0.18em] uppercase text-faded/80 border border-rule/50 px-2.5 py-1 rounded-sm">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        {/* Subtle arrow indicator */}
                        <span
                            class="absolute top-8 right-8 text-faded/30 group-hover:text-amber/50
                       transition-all duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            aria-hidden="true"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="1.5"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"
                                />
                            </svg>
                        </span>
                    </a>
                ))
            }
        </div>
    </section>
</Layout>
