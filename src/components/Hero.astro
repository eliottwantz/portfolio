---
import { marked } from 'marked';
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const hero = siteConfig.hero;
---

<section class="w-full flex flex-col gap-8 mb-16 sm:mb-24">
    <h1 class="text-3xl leading-tight font-serif font-medium sm:text-5xl sm:leading-tight">{hero.title}</h1>
    <figure>
        <img class="w-full h-full max-h-[620px] object-cover" src={hero.image.src} loading="lazy" decoding="async" alt={hero.image.alt} />
        <figcaption class="mt-1.5 text-xs sm:text-sm">{hero.image.caption}</figcaption>
    </figure>
    <div class="max-w-none prose prose-dante sm:prose-lg" set:html={marked.parse(hero.text)} />
    <div class="flex flex-wrap gap-4">
        {hero.actions.map((action) => <Button href={action.href}>{action.text}</Button>)}
    </div>
</section>
