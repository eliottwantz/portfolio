---
import Layout from "../layouts/Layout.astro";

const experiences = [
  {
    role: "Senior Software Developer",
    company: "Company Name",
    period: "2023 — Present",
    description:
      "Leading development of web applications, shaping architecture decisions, and mentoring the team. Working across TypeScript, React, and cloud-native systems.",
  },
  {
    role: "Software Developer",
    company: "Another Company",
    period: "2021 — 2023",
    description:
      "Built and maintained full-stack applications serving thousands of users. Contributed to system design and improved CI/CD pipelines.",
  },
  {
    role: "Junior Developer",
    company: "First Company",
    period: "2019 — 2021",
    description:
      "Where it all began — building web interfaces, learning the craft, and discovering that writing code is a form of thinking.",
  },
];
---

<Layout title="Work — Eliott" description="Professional experience and career journey.">
  <!-- Header -->
  <section class="pt-36 pb-12 px-6">
    <div class="max-w-2xl mx-auto">
      <h1
        class="font-display text-5xl sm:text-6xl md:text-7xl font-light text-cream/90 animate-fade-up"
      >
        Work
      </h1>
      <p
        class="mt-5 font-display italic text-xl text-muted animate-fade-up"
        style="animation-delay: 0.12s;"
      >
        The path so far
      </p>
    </div>
  </section>

  <!-- Timeline -->
  <section class="max-w-2xl mx-auto px-6 pb-32">
    <div class="relative">
      <!-- Vertical golden thread -->
      <div
        class="absolute left-[3px] top-3 bottom-0 w-px bg-gradient-to-b from-amber/40 via-amber/15 to-transparent"
        aria-hidden="true"
      >
      </div>

      <div class="space-y-20 pl-12">
        {
          experiences.map((exp, i) => (
            <article
              class="relative"
              data-reveal
              data-delay={String(i + 1)}
            >
              {/* Timeline dot */}
              <div
                class="absolute -left-12 top-[6px] flex items-center justify-center"
                aria-hidden="true"
              >
                <span class="w-[7px] h-[7px] rounded-full bg-amber/70" />
                <span class="absolute w-[7px] h-[7px] rounded-full bg-amber/30 animate-glow-pulse" />
              </div>

              <div class="space-y-2">
                <span class="text-[11px] tracking-[0.25em] uppercase text-faded font-body">
                  {exp.period}
                </span>
                <h2 class="font-display text-2xl md:text-3xl text-cream/90 font-light">
                  {exp.role}
                </h2>
                <p class="text-amber/60 text-sm font-body tracking-wide">
                  {exp.company}
                </p>
                <p class="mt-4 text-muted leading-[1.85] text-[15px]">
                  {exp.description}
                </p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
