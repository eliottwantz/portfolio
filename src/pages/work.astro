---
import Layout from "../layouts/Layout.astro";

const experiences = [
    {
        role: "iOS Developer",
        company: "Leap Event Technology",
        companyUrl: "https://leapevent.tech/",
        period: "2025 — Present",
        description:
            "Working as an iOS developer in a small, agile team of 2-10 developers. Building and maintaining the iOS app and core libraries using SwiftUI, UIKit, Xcode, Point-Free, and GRDB. Day-to-day work includes shipping new features, fixing bugs, and joining dev talks to improve the codebase while delivering in sprints.",
    },
    {
        role: "AI Model Trainer",
        company: "DataAnnotation",
        companyUrl: "https://dataannotation.tech/",
        period: "2024 — Present",
        description:
            "Training state-of-the-art models for coding tasks across multiple languages (TypeScript, Python, Go, Rust, Java, and more) and domains (CLIs, APIs, servers, web apps, full-stack systems, CI/CD pipelines, and LLM workflows). Crafting rigorous prompts, annotating model responses, and integrating AI agents into real applications.",
    },
    {
        role: "Software Developer",
        company: "Morgan Stanley",
        companyUrl: "https://www.morganstanley.com/",
        period: "2024 — 2025",
        description:
            "Worked with the institutional trading division to maintain and improve trading programs through the full software development life cycle. Built and supported systems in C++ and Python used for order placement and execution, while developing strong domain knowledge in trading and order management.",
    },
    {
        role: "Software Engineer Intern",
        company: "Ribbon Communications",
        companyUrl: "https://ribboncommunications.com/",
        period: "2023",
        description:
            "Worked in a cloud-native team using Go, Kubernetes (OpenShift), Docker, Prometheus, etcd, and MongoDB. Contributed across services ranging from small microservices to larger distributed systems and gained practical experience building scalable platforms.",
    },
    {
        role: "Data Engineer Intern",
        company: "Kruger Inc.",
        companyUrl: "https://www.kruger.com/",
        period: "2022",
        description:
            "Built internal business intelligence dashboards using Power BI and Microsoft SQL Server. Developed strong SQL and BI fundamentals across ETL pipelines, data lakes, data warehouses, and data visualization.",
    },
];
---

<Layout
    title="Work — Eliott Wantz"
    description="Learn more about my work experience and projects I have worked on."
>
    <!-- Header -->
    <section class="pt-36 pb-12 px-6">
        <div class="max-w-2xl mx-auto">
            <h1
                class="font-display text-5xl sm:text-6xl md:text-7xl font-light text-cream/90 animate-fade-up"
            >
                Work
            </h1>
            <p
                class="mt-5 font-display italic text-xl text-muted animate-fade-up"
                style="animation-delay: 0.12s;"
            >
                The path so far
            </p>
        </div>
    </section>

    <!-- Timeline -->
    <section class="max-w-2xl mx-auto px-6 pb-32">
        <div class="relative">
            <!-- Vertical golden thread -->
            <div
                class="absolute left-0.75 top-3 bottom-0 w-px bg-linear-to-b from-amber/40 via-amber/15 to-transparent"
                aria-hidden="true"
            >
            </div>

            <div class="space-y-20 pl-12">
                {
                    experiences.map((exp, i) => (
                        <article class="relative" data-reveal>
                            <div class="space-y-2">
                                <div class="relative">
                                    {/* Timeline dot aligned to period text center */}
                                    <div
                                        class="absolute -left-12 top-1/2 -translate-y-1/2 flex items-center justify-center"
                                        aria-hidden="true"
                                    >
                                        <span class="w-1.75 h-1.75 rounded-full bg-amber/70" />
                                        <span class="absolute w-1.75 h-1.75 rounded-full bg-amber/30 animate-glow-pulse" />
                                    </div>
                                    <span class="block text-xs leading-none tracking-[0.25em] uppercase text-faded font-body">
                                        {exp.period}
                                    </span>
                                </div>
                                <h2 class="font-display text-2xl md:text-3xl text-cream/90 font-light">
                                    {exp.role}
                                </h2>
                                <p class="text-amber/60 text-base font-body tracking-wide">
                                    {exp.companyUrl ? (
                                        <a
                                            href={exp.companyUrl}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="group inline-flex items-center gap-1.5 hover:text-amber transition-colors"
                                        >
                                            <span>{exp.company}</span>
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="h-3.5 w-3.5 translate-y-px opacity-0 -translate-x-1 transition-all duration-200 group-hover:opacity-100 group-hover:translate-x-0 group-focus-visible:opacity-100 group-focus-visible:translate-x-0"
                                                aria-hidden="true"
                                            >
                                                <path d="M7 17 17 7" />
                                                <path d="M9 7h8v8" />
                                            </svg>
                                        </a>
                                    ) : (
                                        exp.company
                                    )}
                                </p>
                                <p class="mt-4 text-muted leading-[1.85] text-[16px]">
                                    {exp.description}
                                </p>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
